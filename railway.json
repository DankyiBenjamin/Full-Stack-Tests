{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "build": {
          "cmds": ["python manage.py collectstatic --noinput"]
        },
        "start": {
          "cmds": ["gunicorn config.wsgi:application --bind 0.0.0.0:$PORT"]
        }
      }
    }
  },
  "root": "backend"
}
